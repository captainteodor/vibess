{
  "compilerOptions": {
    "strict": true, 
    "baseUrl": ".", 
    "paths": {
      "~/*": ["./*"]
    },
    "jsx": "react-jsx", 
    "target": "esnext", 
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"], 
    "allowJs": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "noEmit": true, 
    "esModuleInterop": true, 
    "moduleResolution": "node", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["expo", "expo-router"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "types.d.ts",
    "app/**/*.{ts,tsx}",
    "types/**/*.d.ts"
  ],
  "extends": "./node_modules/expo/tsconfig.base",
  "exclude": [
    "node_modules", 
    "babel.config.js", 
    "metro.config.js", 
    "jest.config.js"
  ]
}